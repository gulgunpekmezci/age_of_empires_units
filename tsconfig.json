{
  "compilerOptions": {
    "baseUrl": "./src",
    "module": "commonjs",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "ES6",
    "jsx": "react"
  },

  "include": [
    "./src/**/*.ts",
    "./src/**/*.d.ts"
  ]
}